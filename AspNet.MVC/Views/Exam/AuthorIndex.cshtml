@model IEnumerable<AspNet.MVC.Models.Author>

@{
    ViewData["Title"] = "Author Index";
}

<h1>Author List</h1>

<p>
    <a asp-action="AuthorCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeathDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeathDate)
            </td>
            <td>
                <!--@Html.ActionLink("Edit", "AuthorEdit", new { id = item.Id }) |-->
                @Html.ActionLink("Details", "AuthorDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "AuthorDelete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Index">Go to Book List</a>
</p>
